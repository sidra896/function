//Question NO::01
 #include<iostream>
 using namespace std;


 void fun(int x) {  // 'x' is a **Formal Parameter**
     cout << "Inside function, x = " << x << endl;
 }

 int main() {
     int a = 10;  // 'a' is an **Actual Parameter**
     fun(a);  // Passing 'a' as an argument
     return 0;
 }
